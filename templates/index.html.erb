<html>
<style>

  body {
    font-family: Helvetica;
  }
</style>
<body>
  <h1>Annotation Viewer</h1>
  <p>For <code><%= target_dir %></code></p>
  <ul>
    <% docs.each do |doc| %>
      <li>
        <h3><%= doc.filename %></h3>
        <ul>

          <% doc.pages.each do |i, page| %>
            <li>
              <strong><%= i %></strong><br />
              <% page.annotations.each do |a| %>
                <%= a.created_at.strftime("%x") %>
                <%= a.to_html %>
              <% end %>
            </li>
          <% end %>

        </ul>
      </li>
    <% end %>
  </ul>
</body>
</html>
